@model BusTour.City

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="uk-text-large" class="uk-margin-top">City Details</h2>

<div>
    <h4>City</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("City_name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City_name)
        </dd>

        <dt>
            @Html.DisplayName("Country")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country1.Country_Name)
        </dd>

        <dt>
            @Html.DisplayName("Short Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City_short_descr)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.City_Id }) |
    @Html.ActionLink("Back to List", "Index", new { }, htmlAttributes: new { @class = "uk-button uk-button-primary" })
</p>
